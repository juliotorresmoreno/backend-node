{
    "compilerOptions": {
        "target": "es5", 
        "module": "commonjs",
        "lib": [
            "es5",
            "es6"
        ],
        "allowJs": true,  
        "outDir": "./build",
        "rootDir": "./src", 
        "removeComments": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceRoot": "",
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    }
}
